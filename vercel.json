{
  "version": 2,
  "builds": [
    { "src": "app.js", "use": "@vercel/node" },
    { "src": "dist/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/auth/github", "dest": "/api/auth/github" },
    { "src": "/auth/github/callback", "dest": "/api/auth/github/callback" },
    { "src": "/api/(.*)", "dest": "/app.js" },
    { "src": "/assets/(.*)", "dest": "/dist/assets/$1" },
    { "src": "/(.*)", "dest": "/dist/index.html" }
  ]
}
