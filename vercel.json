{
  "version": 2,
  "builds": [
    {
      "src": "src/api/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/auth/github", "dest": "/api/app.js" },
    { "src": "/api/auth/github/callback", "dest": "/api/app.js" },
    { "src": "/api/(.*)", "dest": "/api/app.js" },
    { "src": "/assets/(.*)", "dest": "/dist/assets/$1" },
    { "src": "/(.*)\\.js", "headers": { "Content-Type": "application/javascript" }, "dest": "/dist/$1.js" },
    { "src": "/(.*)", "dest": "/dist/index.html" }
  ]
}
